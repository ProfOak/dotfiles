# keyboard rate
xset r rate 250 50

# turn off display power management signalling
xset -dpms
xset s off

compton \
    -bCG \
    --no-fading-openclose \
    --no-fading-destroyed-argb \
    --fade-in-step=1 \
    --fade-out-step=1 \
    --fade-delta=0 \
    --inactive-opacity=1

xbindkeys

# wallpaper
nitrogen --restore

xinput set-prop 11 'libinput Tapping Enabled' 1
xinput set-prop 11 'libinput Tapping Enabled Default' 1

redshift -x
redshift -O 3000 -r

# custom script to set up multiple monitors.
auto-monitors
